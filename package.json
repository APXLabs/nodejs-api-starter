{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "keyblade": "^0.3.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-respond": "^1.0.1",
    "koa-router": "^7.4.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chokidar": "^1.7.0",
    "del": "3.0.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest.setup.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "scripts": {
    "prepush": "lint-staged",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "test": "jest --testEnvironment=node",
    "build": "node tools/build.js",
    "build-watch": "node tools/build.js --watch",
    "docker": "docker-compose run --rm api yarn",
    "docker-install": "docker-compose run --rm --no-deps api yarn install",
    "docker-upgrade": "docker-compose run --rm --no-deps api yarn upgrade",
    "docker-test": "docker-compose run api yarn test",
    "docker-test-watch": "docker-compose run api yarn test-watch",
    "deploy": "node tools/publish.js",
    "start": "node tools/run.js"
  }
}
