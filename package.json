{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=8.11.0"
  },
  "dependencies": {
    "@upskill/nucleus-configurator": "github:APXLabs/nucleus-configurator",
    "@upskill/nucleus-logger": "github:APXLabs/nucleus-logger",
    "@upskill/nucleus-mongodb": "github:APXLabs/nucleus-mongodb",
    "awilix": "^4.0.1",
    "awilix-koa": "^3.0.1",
    "fejl": "^1.0.2",
    "keyblade": "^0.3.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-respond": "^1.0.1",
    "mongoose": "^5.4.4",
    "structure": "^1.3.0"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.4.0",
    "lodash": "^4.17.10",
    "nodemon": "^1.18.3",
    "prettier": "^1.9.2",
    "smid": "^0.1.1",
    "supertest": "^3.4.2"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "test": "env NODE_PATH=. jest",
    "build": "node tools/build.js",
    "build-watch": "node tools/build.js --watch",
    "docker": "docker-compose run --rm api yarn",
    "docker-install": "docker-compose run --rm --no-deps api yarn install",
    "docker-upgrade": "docker-compose run --rm --no-deps api yarn upgrade",
    "docker-test": "docker-compose run api yarn install && yarn test",
    "docker-test-watch": "docker-compose run api yarn install && yarn test --watch",
    "dev": "env NODE_PATH=. nodemon index.js",
    "start": "node build/server.js"
  }
}
